    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/__mocks__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "verbose": true
